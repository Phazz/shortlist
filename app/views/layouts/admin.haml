!!!
%html
  %head
    %title ShortList::Admin
    = stylesheet_link_tag    asset_path('admin.css'), media: 'all'
    = javascript_include_tag asset_path('admin.js')
    = csrf_meta_tags
    %meta{content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name: 'viewport'}

    = yield :js

  %body{'ng-app' => 'app'}
    = bs_flash
    = render 'admin/shared/navbar'
    .sidebar= render 'admin/shared/sidebar'
    .page
      #admin_container
        = yield
